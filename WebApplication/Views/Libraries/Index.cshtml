@model IEnumerable<WebApp.Models.Library>

@{
    ViewData["Title"] = "Index";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Pattaya&display=swap" rel="stylesheet">
    
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        input[type=text], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }

        input[type=submit] {
            background-color: #6c499a;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #da17e2;
            }

        .container {
            border-radius: 5px;
            background-color:LightGray ;
            padding: 13px;
            font-family: 'Pattaya', sans-serif;
            color: black;
            font-size: 20px;
        }

         table, th, td {
	        color: deeppink;
	        border-collapse: collapse;
        }

        tr:hover {
	        background-color: beige;
        }

        th, td {
	        padding: 8px;
	        text-align: left;
	        border-bottom: 1px solid #DDD;
        }

    </style>
</head>

<h1>List Description</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.total_nr_of_books)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.borrowed_books)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Library item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.total_nr_of_books)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.borrowed_books)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.stock_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.stock_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.stock_id">Delete</a>     
            </td>
        </tr>

}  
    </tbody>
</table>

<button style="position:center;
       display: inline-block;
       cursor: pointer;
       text-align: center;
       outline: 1px;
       color: red;
       background-color: green;
       border: none;
       border-radius: 10px;
       box-shadow: 0 7px #CCCCCC;" type="button" onclick="location.href='@Url.Action("create","Libraries")'">Borrowed Books
</button>
